<div class="form-container">
    <form class="login-form" action="/submit" method="POST"> 
        <h2>Login</h2>
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="account_email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="account_password" required>
        </div>
        <button type="submit" class="submit-btn">Submit</button>
    </form>
    <p>No account? <a href="/account/register">Sign-up</a></p>
</div>